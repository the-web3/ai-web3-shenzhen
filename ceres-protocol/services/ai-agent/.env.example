# Blockchain Configuration
RPC_URL=https://hashkey-chain-testnet.rpc.url
CHAIN_ID=133
PRIVATE_KEY=your_private_key_here

# Contract Addresses (will be set after deployment)
CERES_REGISTRY_ADDRESS=0x...
CERES_MARKET_FACTORY_ADDRESS=0x...
CERES_GREEN_POINTS_ADDRESS=0x...

# AI Agent Configuration
AGENT_MODE=all  # Options: competitive, trend_analysis, external_hotspot, all
LOG_LEVEL=INFO
MAX_EVENTS_PER_DAY=10
MIN_CONFIDENCE_THRESHOLD=0.6

# Strategy Parameters
COMPETITIVE_PRICE_SPREAD_MIN=0.02  # 2%
COMPETITIVE_PRICE_SPREAD_MAX=0.05  # 5%
COMPETITIVE_STAKE_MULTIPLIER_MIN=0.8
COMPETITIVE_STAKE_MULTIPLIER_MAX=1.2
COMPETITIVE_RESPONSE_DELAY_MIN=30  # seconds
COMPETITIVE_RESPONSE_DELAY_MAX=300  # seconds

# Trend Analysis Parameters
TREND_VOLUME_THRESHOLD=10.0  # HKTC
TREND_PARTICIPANT_THRESHOLD=5
TREND_VOLATILITY_THRESHOLD=0.1
TREND_TIME_WINDOW_HOURS=24

# External Data Sources
WEATHER_API_KEY=your_weather_api_key
NEWS_API_KEY=your_news_api_key
SOCIAL_MEDIA_API_KEY=your_social_media_api_key
SATELLITE_DATA_API_KEY=your_satellite_api_key

# Orderbook Strategy Parameters
ORDERBOOK_INITIAL_SPREAD_BPS=500  # 5%
ORDERBOOK_ORDER_LAYERS=5
ORDERBOOK_BASE_ORDER_SIZE=0.1  # HKTC
ORDERBOOK_SIZE_INCREMENT_FACTOR=1.2
ORDERBOOK_PRICE_ADJUSTMENT_FACTOR=0.1

# Monitoring and Alerts
ENABLE_MONITORING=true
ALERT_WEBHOOK_URL=https://your-webhook-url.com
HEALTH_CHECK_INTERVAL=60  # seconds