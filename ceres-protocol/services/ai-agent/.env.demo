MAX_EVENTS_PER_DAY=5  # Reduced for demo
MIN_CONFIDENCE_THRESHOLD=0.5  # Lower threshold for more demo activity

# Strategy Parameters - Optimized for Demo
COMPETITIVE_PRICE_SPREAD_MIN=0.03  # 3% - more noticeable differences
COMPETITIVE_PRICE_SPREAD_MAX=0.08  # 8% - clear competitive positioning
COMPETITIVE_STAKE_MULTIPLIER_MIN=0.7
COMPETITIVE_STAKE_MULTIPLIER_MAX=1.5
COMPETITIVE_RESPONSE_DELAY_MIN=10  # Faster response for demo
COMPETITIVE_RESPONSE_DELAY_MAX=60   # Max 1 minute delay

# Trend Analysis Parameters - More Sensitive for Demo
TREND_VOLUME_THRESHOLD=5.0   # Lower threshold (5 HKTC)
TREND_PARTICIPANT_THRESHOLD=3  # Lower threshold (3 people)
TREND_VOLATILITY_THRESHOLD=0.05  # Lower threshold (5%)
TREND_TIME_WINDOW_HOURS=12  # Shorter window for faster demo

# External Data Sources - DEMO MODE (No real API keys needed)
# The simulation engine will generate realistic data without external APIs
WEATHER_API_KEY=demo_simulation_mode
NEWS_API_KEY=demo_simulation_mode
SOCIAL_MEDIA_API_KEY=demo_simulation_mode
SATELLITE_DATA_API_KEY=demo_simulation_mode

# Orderbook Strategy Parameters - Demo Optimized
ORDERBOOK_INITIAL_SPREAD_BPS=300  # 3% - tighter spreads for demo
ORDERBOOK_ORDER_LAYERS=3  # Fewer layers for cleaner demo
ORDERBOOK_BASE_ORDER_SIZE=0.2  # Larger base size for visibility
ORDERBOOK_SIZE_INCREMENT_FACTOR=1.5
ORDERBOOK_PRICE_ADJUSTMENT_FACTOR=0.15

# Monitoring and Alerts - Demo Settings
ENABLE_MONITORING=true
ALERT_WEBHOOK_URL=  # Leave empty for demo
HEALTH_CHECK_INTERVAL=30  # More frequent checks for demo

# Demo-Specific Settings
DEMO_MODE=true
SIMULATION_SEED=42  # For reproducible demo results
DEMO_ACCELERATION_FACTOR=5  # Speed up time-based processes for demo
DEMO_AUTO_RESOLVE_EVENTS=false  # Keep events open for demo
DEMO_VERBOSE_LOGGING=true  # Extra logging for demo purposes