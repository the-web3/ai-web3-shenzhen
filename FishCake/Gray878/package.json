{
  "name": "fishcake-wallet",
  "version": "1.0.0",
  "description": "Fishcake Multi-Chain Wallet - Chain-Abstracted UX for seamless multi-chain operations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "hardhat test",
    "compile": "hardhat compile",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.ts --network hardhat",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:bsc": "hardhat run scripts/deploy.ts --network bscTestnet",
    "deploy:optimism": "hardhat run scripts/deploy.ts --network optimismSepolia",
    "deploy:base": "hardhat run scripts/deploy.ts --network baseSepolia",
    "deploy:arbitrum": "hardhat run scripts/deploy.ts --network arbitrumSepolia",
    "test:rpc": "ts-node scripts/test-rpc.ts",
    "test:contracts": "ts-node scripts/test-deployed-contracts.ts",
    "verify:contracts": "ts-node scripts/verify-contracts.ts",
    "check:account": "hardhat run scripts/check-account.ts --network sepolia",
    "check:balances": "ts-node scripts/check-balances.ts"
  },
  "keywords": [
    "wallet",
    "multi-chain",
    "ethereum",
    "web3",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/node": "^25.0.9",
    "chai": "^4.5.0",
    "hardhat": "^2.22.0",
    "solidity-coverage": "^0.8.17",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.16.0"
  }
}
